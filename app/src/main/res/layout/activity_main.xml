<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/foo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/foo_label"
        android:layout_margin="5dip"/>

    <Button
        android:id="@+id/bar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bar_label"
        android:layout_margin="5dip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/env_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/env_label"
            android:layout_margin="5dip"/>

        <Spinner
            android:id="@+id/env_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/env_choices"
            />
    </LinearLayout>
</LinearLayout>
